AR= ar
ARFLAGS= cru
CPP=cpp
LIBMET=
LIBMPI=
LIBSYS=
LIBTEC=
MODEXT=mod
MODULES=*.$(MODEXT)
MPIINC=

### Machine-dependent settings ################################################

MACHINE= $(shell uname -n)

### Hipergator at UF ######################## 
ifeq ($(findstring ufhpc,$(MACHINE)),ufhpc)
  FC=tau_f90.sh
  COMP=tau_f90.sh 
  CXX=tau_cxx.sh
  CXXFLAGS=
  CXXOPT= 
  LINKER=tau_cxx.sh

  CXXLINKFLAGS += -L/usr/mpi/intel/openmpi-1.6/lib64 -lmpi_f90

  FORTFLAGS= -DFORTRAN_UNDERSCORE -DFORTRAN_LOWERCASE

  ifdef DEBUG
    CMFLAGS=-g -C
    LDFLAGS=-g -C
  else
    CMFLAGS=-O 
    LDFLAGS=-O 
  endif

  ifdef PROF
    CMFLAGS+=-pg
    LDFLAGS+=-pg
  endif 

  LIBSYS=

  ifdef ROCPROF
    FPPFLAGS+= -DROCPROF
    LIBSYS+= -L$(ROCPROF)/lib -lRocprof
  endif

  ifdef HYPRE
    CXXLINKFLAGS+=  -I/home/mparmar/hypre/include -L/home/mparmar/hypre/lib -lHYPRE
    MKLLIBS = -lmkl_intel_lp64 -lmkl_sequential -lmkl_lapack -lmkl_core
    CXXLINKFLAGS+=  -L/opt/intel/mkl/10.0.2.018/lib/em64t $(MKLLIBS)
    CXXLINKFLAGS+=  -Wl,-rpath -Wl,/opt/intel/mkl/10.0.2.018/lib/em64t
  endif

  FPPFLAGS+=

  TECHOME= ../../libtecplot/tecio
  LIBTEC=$(TECHOME)/lib/tecio64.a

  ifdef RFLUPOST
    INCTEC=-I$(TECHOME)/include
  endif

  LIBMET = ../../libmetis/libmetis.a
endif

### Pattern rules ##############################################################
%.o: %.f90
ifeq ($(FC),f90)
	$(COMP) $(FPPFLAGS) $(CMFLAGS) $(MODDIR:%=-p%) -c $< -o $@
endif
ifeq ($(FC),ifc)
	$(COMP) $(FPPFLAGS) $(CMFLAGS) $(MODDIR:%=-I%) -c $< -o $@
endif
ifeq ($(FC),ifort)
	$(COMP) $(FPPFLAGS) $(CMFLAGS) $(MODDIR:%=-I%) -c $< -o $@
endif
ifeq ($(FC),mpif90)
	$(COMP) $(FPPFLAGS) $(CMFLAGS) $(MODDIR:%=-I%) -c $< -o $@
endif
ifeq ($(FC),mpiifort)
	$(COMP) $(FPPFLAGS) $(CMFLAGS) $(MODDIR:%=-I%) -c $< -o $@
endif
ifeq ($(FC),pathf95)
	$(COMP) $(FPPFLAGS) $(CMFLAGS) $(MODDIR:%=-module %) -c $< -o $@
endif
ifeq ($(FC),pgf90)
	$(COMP) $(FPPFLAGS) $(CMFLAGS) $(MODDIR:%=-module %) -c $< -o $@
endif
ifeq ($(FC),cmpif90c)
	$(COMP) $(FPPFLAGS) $(CMFLAGS) $(MODDIR:%=-I%) -c $< -o $@
endif
#ifeq ($(FC),tau_f90.sh)
	$(COMP) $(FPPFLAGS) $(CMFLAGS) $(MODDIR:%=-I%) -c $< -o $@
#endif
ifeq ($(FC),mpxlf)
%.o: %.F90
	$(COMP) $(FPPFLAGS:-D%=-WF,-D%) $(CMFLAGS:-D%=-WF,-D%) \
	$(MODDIR:%=-I%) -qsuffix=f=f90:cpp=F90 -qthreaded -c $< -o $@
endif

%.f90: %.F90
	$(CPP) -C -P -traditional $(FPPFLAGS) $< $@
%.o: %.f
ifeq ($(FC),mpxlf)
	$(FC) $(CMFLAGS:-D%=-WF,-D%) -qsuffix=f=f -qfixed -c $< -o $@
else
	$(COMP) $(CMFLAGS) -c $< -o $@
endif
%.o: %.C
	$(CXX) $(CXXOPT) -I$(FLUIDHOME)/include $(INCTEC) $(FORTFLAGS) -c $< -o $@


### Default action #############################################################
all:

